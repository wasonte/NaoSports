<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/game_over_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/game_over"/>

    <ImageView
        android:id="@+id/win_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/game_over_imageview"
        android:src="@drawable/win"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/lose_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/game_over_imageview"
        android:src="@drawable/lose"
        android:visibility="gone"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Back to menu"
        android:backgroundTint="@color/colorAccent"/>

    <TextView
        android:id="@+id/result_solo_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/back_button"
        android:layout_marginBottom="50dp"
        android:textSize="55sp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/result_versus_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/back_button"
        android:layout_marginBottom="20dp"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
</RelativeLayout>